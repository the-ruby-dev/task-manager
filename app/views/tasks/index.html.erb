<div class="container">
  <p style="color: green"><%= notice %></p>

  <div class="d-flex justify-content-between">
    <h1>Tasks</h1>
    <div><%= link_to "New task", new_task_path, class: "btn btn-primary" %></div>
  </div>

  <div id="tasks">
    <% @tasks.each do |task| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= task.title %></h5>
          <p class="card-text"><%= task.description %></p>
          <%= link_to "Open task", task, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
